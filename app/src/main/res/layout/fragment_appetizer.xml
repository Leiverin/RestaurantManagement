<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="appetizerViewModel"
            type="com.poly.myapplication.ui.activities.product.appetizer.AppetizerViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E4E4E4"
        tools:context=".ui.activities.product.appetizer.AppetizerFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_appetizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_product" />

        <ProgressBar
            android:id="@+id/prg_load_product"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:indeterminateOnly="true"
            android:indeterminateDrawable="@drawable/progress_custom_circle"
            android:layout_gravity="center"
            android:indeterminateDuration="600"
            />
    </FrameLayout>
</layout>