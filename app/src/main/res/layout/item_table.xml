<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="7dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_icon_table"
            android:adjustViewBounds="true"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
    <TextView
        style="@style/textTable"
        android:text="@string/textNameTableItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:fontFamily="@font/josefinslab_regular"
        android:textStyle="bold"
        android:text="@string/textOrderOnTable"
        android:textColor="@color/textColorOrderOnTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>