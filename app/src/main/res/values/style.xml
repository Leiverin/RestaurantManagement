<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    // fragment splash

    <style name="titleSplash">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    // fragment login

    <style name="backFragmentLogin">
        <item name="android:paddingHorizontal" tools:targetApi="o">20dp</item>
        <item name="android:background">@color/backColorLogin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="titleLogin">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/josefinslab_regular</item>
    </style>

    <style name="backEditLogin">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/bg_edit_login</item>
    </style>

    <style name="editTextLogin">
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/josefinslab_regular</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="contactManagerLogin">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/josefinslab_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="backBtnLogin">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardBackgroundColor">@color/backColorBtnLogin</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="textBtnLogin">
        <item name="android:fontFamily">@font/josefinslab_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColorBtnLogin</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    // fragment table

    <style name="titleTable">
        <item name="android:fontFamily">@font/josefinslab_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textTableToobar">
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:fontFamily">@font/josefinslab_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorTable</item>
    </style>

    <style name="imgIcon">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="textTable">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:fontFamily">@font/josefinslab_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    // fragment table item
    <style name="titleTableItem">
        <item name="android:fontFamily">@font/josefinslab_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="textBtnAdd">
        <item name="android:fontFamily">@font/josefinslab_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="backBtnAdd">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardBackgroundColor">@color/backColorBtnLogin</item>
        <item name="cardCornerRadius">20dp</item>
    </style>
    // fragment add food
    <style name="editTextSearch">
        <item name="android:fontFamily">@font/josefinslab_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/bg_edit_search</item>
    </style>
    <style name="styleTabLayoutAddF">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/black</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextColor">@color/white</item>
    </style>
    <style name="textTabToobar">
        <item name="android:fontFamily">@font/josefinslab_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorTable</item>
    </style>

</resources>
